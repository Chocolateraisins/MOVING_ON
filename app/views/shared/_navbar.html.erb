<div class="navbar-wagon">
  <!-- Logo -->

    <%= link_to image_tag("logo.png", height: 50), root_path, class:"navbar-wagon-brand" %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right"> <!-- hidden-xs hidden-sm -->

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <%# if current_user.admin? %>
        <%#= link_to "Dashboard", admin_orders_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%# end %>
      <%#= link_to "Orders", orders_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%#= link_to "Sign out", destroy_user_session_path, method: :delete, class: "navbar-wagon-item navbar-wagon-link"%>
      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
          <%#= image_tag "http://kitt.lewagon.com/placeholder/users/ssaunier", class:"avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <% if current_user.admin? %>
              <li>
                <%= link_to admin_orders_path do %>
                  <i class="fas fa-tachometer-alt"></i> <%= t(".profile", default: "Dashboard") %>
                <% end %>
              </li>
            <% end %>
            <li>
              <%= link_to orders_path do %>
                <i class="fas fa-shopping-basket"></i>  <%= t(".settings", default: "Orders") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fas fa-sign-out-alt"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>
  </div>

