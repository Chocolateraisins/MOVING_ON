<div class="container">
  <h1>Services index</h1>
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2">
      <div class="main-card-services">
    <% @services.each do |service| %>

            <h3>Service: <%= service.name %>
              <%= link_to 'Show', admin_service_path(service), class: "btn btn-primary" %>
              <%= link_to 'Edit', edit_admin_service_path(service), class:"btn btn-info" %>
              <%= link_to 'Delete service', admin_service_path(service), method: :delete, data: { confirm: "Are you sure you want to delete the service #{service.name.upcase}?" }, class:"btn btn-danger" %></h3>
              <p><%= service.description %></p>

              <p>
              <% service.service_items.each do |service_item| %>
                Content:
                <%= service_item.content%>
                - Unit price:
                <%= service_item.unit_price%>
                - Date type:
                <%= service_item.data_type%>
                <%= link_to 'Show', admin_service_service_item_path(service, service_item), class:"btn btn-primary" %>
                <%= link_to 'Edit', edit_admin_service_service_item_path(service, service_item), class:"btn btn-info" %>
                <%= link_to 'Delete', admin_service_service_item_path(service, service_item), method: :delete, data: { confirm: "Are you sure you want to delete the Service Item #{service_item.content.upcase}?" }, class:"btn btn-danger" %></p>

              <% end %>
              <%= link_to 'Add Service Item', new_admin_service_service_item_path(service), class:"btn btn-primary" %>
              <% end %>

          <%= link_to 'Add Service', new_admin_service_path, class:"btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>



