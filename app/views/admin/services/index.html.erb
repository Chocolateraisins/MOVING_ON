<div class="container">
  <h1>Services index</h1>
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2">
      <div class="main-card-services">

        <div>
        <ol>
        <% @services.each do |service| %>
          <div class="message">
            <li>


              <h3>Service: <%= service.name %></h3>
              <div>
                <%= link_to 'Show', admin_service_path(service), class:"btn" %>
                <%= link_to 'Edit', edit_admin_service_path(service), class:"btn" %>
                <%= link_to 'Delete service', admin_service_path(service), method: :delete, data: { confirm: "Are you sure you want to delete the service #{service.name.upcase}?" }, class:"btn" %>
              </div>
              <div><p><%= service.description %></p></div>


                <div>
                  <% service.service_items.each do |service_item| %>
                    <div class="service_item">
                      <div class="flex-item-content">
                        Content:
                        <%= service_item.content%>
                        </div>
                        <div class="flex-item-price">
                        Unit price:
                        <%= service_item.unit_price%>
                        </div>
                        <div class="flex-item-type">
                        Date type:
                        <%= service_item.data_type%>
                        </div>

                    </div>
                  <% end %>
                </div>


            </li>
          </div>
        <% end %>
        </ol>
        </div>

      </div>
    </div>
  </div>
</div>




