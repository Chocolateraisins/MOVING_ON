<div class="container" style="margin-top:70px">
  <ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Orders</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Users</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">Tasks</a>
    </li>
  </ul>
  <div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show in active" id="home" role="tabpanel" aria-labelledby="home-tab">
      <!-- Orders tab -->
      <div class="tab-1">
        <h3>Orders</h3>
        <div
        id="map"
        style="width: 100%;
        height: 500px;"
        data-markers="<%= @markers.to_json %>"
        ></div>
        <ul>
          <% @orders.each do |order| %>
          <h3>order #<%= order.id %></h3>
          <li>Customer :<%= order.user.first_name %> <%= order.user.last_name %></li>
          <li>Invoice: <%= order.invoice_amount %></li>
          <li>Address: <%= order.deceased_address %></li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
      <div class="2"> <!-- Users tab -->
        <h3>Users</h3>
        <ul>
          <% User.all.each do |user| %>
          <h4>Customer :<%= user.first_name %> <%= user.last_name %></h4>
          <li>Orders: <%= user.orders.count %></li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
      <div class="3"> <!-- Pending tab -->
        <h3>Pending tasks</h3>
        <ul>
          <% @orders.each do |order| %>
          <% if order.status == "pending" %>
          <h4>order #<%= order.id %></h4>
          <% order.order_items.each do |order_item| %>
          <% if order_item.completed == false && order_item.service_item.category == "task" %>
          <%= order_item.service_item.content %>
          <%= order_item.content %>
          <% end %>
          <% end %>
          <% end %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>


