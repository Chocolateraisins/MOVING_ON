<h3>Orders</h3>
  <div
  id="map"
  style="width: 100%;
  height: 500px;"
  data-markers="<%= @markers.to_json %>"
  ></div>
  <ul>
    <% @orders.each do |order| %>
      <h3>order #<%= order.id %></h3>
      <li>Customer :<%= order.user.first_name %> <%= order.user.last_name %></li>
      <li>Invoice amount: <%= order.invoice_amount %>$</li>
      <li>Address: <%= order.deceased_address %></li>
      <p><%= link_to "See details", order_path(order), method: :get %></p>
      <button type="button" class="btn btn-danger"><%= button_to "Cancel order", admin_order_path(order), method: :delete, data: {confirm: "Are you sure you want to cancel this order?"} %></button>
      <% end %>
  </ul>



