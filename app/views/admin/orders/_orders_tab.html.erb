<h3>Orders</h3>
<div
id="map"
style="width: 100%;
height: 500px;"
data-markers="<%= @markers.to_json %>"
></div>

<div class="container">
  <div class="row">
    <% @orders.each do |order| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://res.cloudinary.com/dxzgio39l/image/upload/v1542622882/graveyard.jpg');">
        <h3>order #<%= order.id %></h3>
        <li>Customer :<%= order.user.first_name %> <%= order.user.last_name %></li>
        <li>Invoice amount: <%= order.invoice_amount %>$</li>
        <li>Address: <%= order.deceased_address %></li>
        <p><%= link_to "See details", order_path(order), method: :get %></p>
        <button type="button"><%= button_to "Cancel order", admin_order_path(order), method: :delete, data: {confirm: "Are you sure you want to cancel this order?"} %></button>
      </div>
    </div>
    <% end %>
  </div>
</div>


