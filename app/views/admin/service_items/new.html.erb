<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 form">
    <h3>Add Service Item to Service: </h3>
    <h3><%= @service.name %></h3>
    <br>
    <%= simple_form_for [@service, @service_item], url: admin_service_service_items_path do |f| %>
    <%= f.input :content, label: 'Content of the Service Item', error: 'Content is mandatory, please specify one' %>
    <%= f.input :additional_information, label: 'Add some information to display to the user' %>
    <%= f.input :data_type, label: 'Data type of the Service Item', error: 'Data type is mandatory, please specify one', collection: ["text", "number", "date", "address"] %>
    <%= f.input :category, label: 'Category of the Service Item', error: 'Category is mandatory, please specify one', collection: ["information", "task"] %>
    <%= f.input :unit_price, label: 'Unit price of the Servie Item', error: 'Unit price is mandatory, please specify one' %>
    <%= f.button :submit, class:"btn btn-primary btn-lg"%>
    <% end %>
    </div>
  </div>
</div>
