<h1>Services index</h1>

<ol>
  <% @services.each do |service| %>
      <li>
  <h3>Service: <%= service.name %>
  <%= link_to 'Show', service, class:"btn btn-primary" %>
  <%= link_to 'Edit', edit_service_path(service), class:"btn btn-info" %>
  <%= link_to 'Delete service', service, method: :delete, data: { confirm: "Are you sure you want to delete the service #{service.name.upcase}?" }, class:"btn btn-danger" %></h3>
  <p><%= service.description %></p>
  <br>
  <p>
    <% service.service_items.each do |service_item| %>
        Content:
        <%= service_item.content%>
        - Unit price:
        <%= service_item.unit_price%>
        - Date type:
        <%= service_item.data_type%>
      <%= link_to 'Show', service, class:"btn btn-primary" %>
      <%= link_to 'Edit', edit_service_path(service), class:"btn btn-info" %>
      <%= link_to 'Delete', service, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></p>
      </li>
    <% end %>
    <%= link_to 'Add Service Item', new_service_path, class:"btn btn-primary" %>
  <% end %>
</ol>
  <%= link_to 'Add Service', new_service_path, class:"btn btn-primary" %>


